<% layout('layouts/boilerplate')%> 
<%- include('../partials/flash')%>
<div class="login-page-src">
  <div class="wrapper <%if(x){%>
    <%='active'%>
  <%}%>
  ">
    <div class="form-box login">
      <h2>Login</h2>
      <form action="/login" method="post" novalidate>
        <div class="input-box">
          <span class="icon">
            <ion-icon name="person-circle-outline"></ion-icon>
          </span>
          <input type="text" name="username" id="username" required/>
          <label for="username">Username</label>
        </div>
        <div class="input-box">
          <span class="icon">
            <ion-icon name="lock-closed-outline"></ion-icon>
          </span>
          <input type="password" name="password" id="password" required/>
          <label for="password">Password</label>
        </div>
        <div class="remember-forgot">
          <label><input type="checkbox" />Remember Me</label>
          <a href="#">Forgot Password?</a>
        </div>
        <button class="btn">Login</button>
        <div class="login-register">
          <p>
            Don't have an account?<a href="#" class="register-link">Register here.</a>
          </p>
        </div>
      </form>
    </div>
    <div class="form-box register">
      <h2>Registeration</h2>
      <form action="/register" method="post">
        <div class="input-box">
          <span class="icon">
            <ion-icon name="mail-outline"></ion-icon>
          </span>
          <input type="email" name="email" id="email" required/>
          <label for="email">Email</label>
        </div>
        
        <div class="input-box">
          <span class="icon">
            <ion-icon name="person-circle-outline"></ion-icon>
          </span>
          <input type="text" name="username" id="username" required/>
          <label for="username">Username</label>
        </div>
        <div class="input-box">
          <span class="icon">
            <ion-icon name="lock-closed-outline"></ion-icon>
          </span>
          <input type="password" name="password" id="password" required/>
          <label for="password">Password</label>
        </div>
        <div class="radio-box">
          <span>Role-></span>
          <input type="radio" name="role" id="role" value="buyer" checked required>
          <label for="role">Buyer:</label>
          <input type="radio" name="role" id="role" value="seller" required>
          <label for="role">Seller:</label>
        </div>
          <button class="btn">Signup</button>
          <div class="login-register">
            <p>
              Already have an account?<a href="#" class="login-link">Login.</a>
            </p>
          </div>
      </form>
      
  </div>
  </div>
</div>